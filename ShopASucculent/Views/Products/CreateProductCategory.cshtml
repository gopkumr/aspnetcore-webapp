@model ShopASucculent.Models.ProductCategoryViewModel

@{
    ViewData["Title"] = "CreateProductCategoryView";
}

<h2>CreateProductCategoryView</h2>

<h4>ProductCategoryViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateProductCategory">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                @Html.LabelFor(q=>q.ProductCategory.Name)
                <div class="form-control">
                    <input name="Name"  type="text" value="@Model.ProductCategory.Name"/>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
