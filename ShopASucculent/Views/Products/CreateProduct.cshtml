@model ShopASucculent.Models.AddNewProductViewModel

@{
    ViewData["Title"] = "CreateProductView";
}

<h2>CreateProductView</h2>

<h4>AddNewProductViewModel</h4>
<hr />
<p>
    <a asp-action="CreateProductCategory">Create New Category</a>
</p>
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateProduct">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                @Html.LabelFor(q => q.ProductData.Name)
                <div class="form-control">
                    <input type="text" asp-for="@Model.ProductData.Name" />
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(q => q.ProductCategories)
                <div class="form-control">
                    @Html.DropDownListFor(q => q.ProductData.Category.Id, new SelectList(Model.ProductCategories,"Id","Name")))
                </div>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
